{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@globals/*": [
        "./src/globals/*"
      ],
      "@http/*": [
        "./src/http/*"
      ],
      "@enums/*": [
        "./src/enums/*"
      ],
      "@server/*": [
        "./src/server/*"
      ],
      "types/*": [
        "./src/@types/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/**/*.spec.ts",
    "**/**/*.spec.tsx",
    "**/**/*.d.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "./jest.setup.js",
  ],
  "exclude": [
    "node_modules"
  ],
}